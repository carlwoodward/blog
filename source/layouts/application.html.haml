!!! 5
%head
  %title Carl Woodward
  %meta{:charset => "UTF-8"}
  %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"}
  = stylesheet_link_tag "application", "syntax"
  %link{:href => "//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css", :rel => "stylesheet"}
  = feed_tag :atom, "#{blog.options.prefix.to_s}/feed", title: "Atom Feed"

  :erb
    <script type="text/javascript" src="//use.typekit.net/fje1yfr.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>

%body
  .container
    %header
      %a(href="/")
        %h1 Carl Woodward
    %hr

    #content
      .row
        .col-md-12
          = yield

    %hr.footer

    %footer
      .row
        .col-md-2.avatar
          = image_tag image_path("me.jpg")
        .col-md-10
          %h4 Carl Woodward
          %p Software guy based in Sydney, Australia.
          %p.social
            %a(href="https://twitter.com/cjwoodward")
              %i.fa.fa-twitter.fa-2x

            %a.space{href:"https://github.com/carlwoodward"}
              %i.fa.fa-github-alt.fa-2x
